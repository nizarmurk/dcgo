name: Build-and-Release

on:
  release:
    types: [created]

env:
  GO_VERSION: 1.20.2

jobs:
  build:
    name: Build and Release
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os: [macos-latest, windows-latest, ubuntu-latest]
        goos: [darwin, windows, linux]
        goarch: [amd64]
    steps:
    - name: Checkout Code
      uses: actions/checkout@v2
    - name: Set up Go
      uses: actions/setup-go@v2
      with:
        go-version: ${{ env.GO_VERSION }}
    - name: Build
      run: go build -ldflags="-s -w" -o myapp_${{ matrix.goos }}_${{ env.GO_VERSION }}_${{ matrix.os }} .
    - name: Create Release
      uses: actions/create-release@v1
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      with:
        tag_name: ${{ github.ref }}
        release_name: Release ${{ github.ref }}
        body: Automated release created by GitHub Actions
        draft: false
        prerelease: false
    - name: Upload Release Asset
      uses: actions/upload-release-asset@v1
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      with:
        upload_url: ${{ github.event.release.upload_url }}
        asset_path: ./myapp_${{ matrix.goos }}_${{ env.GO_VERSION }}_${{ matrix.os }}
        asset_name: myapp_${{ matrix.goos }}_${{ env.GO_VERSION }}_${{ matrix.os }}
        asset_content_type: application/octet-stream
